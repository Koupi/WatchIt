<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_movie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/windowBackground"
    tools:context="by.yawningturtles.watchit.MovieActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/movie_poster"
                android:src="@drawable/default_poster" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:layout_centerInParent="true"
                    android:textSize="30sp"
                    android:textAllCaps="true"
                    android:id="@+id/movie_title"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/movie_title"
                    android:id="@+id/movie_mark"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_type"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_year"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_genre"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="10dp"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/movie_plot"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:text="Time:"
                    android:textColor="@color/textColorPrimary"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_runtime"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:text="Country:"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_country"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:text="Director:"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_director"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:text="Actors:"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:textSize="15sp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_actors"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_planned" />
</android.support.design.widget.CoordinatorLayout>
